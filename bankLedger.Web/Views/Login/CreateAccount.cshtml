@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <input id="userName" class="login-input form-control" placeholder="Desired User Name" />
    <input id="password" class="login-input form-control" placeholder="Password" type="password"/>
    <input id="passwordVerification" class="login-input form-control" placeholder="Verify Password" type="password"/>
    <br />
    <input id="createUser" class="btn btn-primary forest-green no-outline form-control no-border-radius" type="button" value="Create User" />
    <br />
    <span id="badPassword" class="login-span error d-none">Password cannot be empty or blank.</span>
    <span id="noMatch" class="login-span error d-none">Passwords do not match.</span>
    <span id="badRequest" class="login-span error d-none">There was a problem processing your request.</span>
    <span id="badUserName" class="login-span error d-none">Not a valid user name.</span>
</div>