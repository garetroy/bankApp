@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <input id="userName" class="login-input" placeholder="Enter Username" name="UserName" value="" />
    <input id="password" class="login-input" placeholder="Enter Password" name="Password" type="password" value="" />
    <br />
    <span id="badLogin" class="login-span error d-none">Could not login given the current User Name and Password.</span>
    <br />
    <input id="Login" class="btn btn-primary forest-green no-outline" type="button" value="Login" />
    <a href="/Login/CreateAccount">
        <input id="CreateAccount" class="btn btn-primary forest-green no-outline" type="button" value="Create an Account" />
    </a>
</div>
